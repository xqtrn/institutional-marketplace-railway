<script>
// [JavaScript код остается без изменений]
(function() {
    // Configuration
    const SHEET_ID = '1_Ab8Qi3wFI0TmrA2fqzqaSlc5WNPdUsU4B2BGNSKx-0';
    const API_KEY = 'AIzaSyBhupxK4H_W5Z41RwlpBcUYtG3EnuPZceE';
    const LOGOS_URL = 'https://docs.google.com/spreadsheets/d/1kQr17XMj8-iNjGP7OAwLNz6p5juvJJ0obyUmqBH_lmU/export?format=csv';
    
    // State
    let platformState = {
        buyData: [],
        sellData: [],
        currentData: [],
        filteredData: [],
        activeTab: 'sell',
        selectedCompany: null,
        modalSelectedCompany: null,
        companyLogos: {},
        sortColumn: 'date',
        sortDirection: 'desc',
        showAllData: true,
        selectedStructures: ['Direct trade', 'SPV', 'Forward'],
        selectedShareClasses: ['Common', 'Preferred']
    };
    
    // Fallback data
    const fallbackData = {
        buy: [
            {company: 'SpaceX', lastUpdate: '09/18/2025', volume: '$2,500,000', price: '$210.00', valuation: '$397.30B', structure: 'Direct trade', shareClass: 'Common'},
            {company: 'Databricks', lastUpdate: '09/17/2025', volume: '$12,000,000', price: '$85.50', valuation: '$43B', structure: 'SPV', shareClass: 'Series I'},
            {company: 'Stripe', lastUpdate: '09/16/2025', volume: '$5,000,000', price: '$32.75', valuation: '$65B', structure: 'Secondary', shareClass: 'Preferred'},
            {company: 'OpenAI', lastUpdate: '09/15/2025', volume: '$20,000,000', price: '$86.00', valuation: '$157B', structure: 'Block Trade', shareClass: 'Common'},
            {company: 'Anthropic', lastUpdate: '09/14/2025', volume: '$15,000,000', price: '$15.50', valuation: '$40B', structure: 'Direct trade', shareClass: 'Series E'},
            {company: 'Ripple', lastUpdate: '09/11/2025', volume: '$3,500,000', price: '$10.25', valuation: '$15B', structure: 'Direct trade', shareClass: 'Preferred'},
            {company: 'Bolt', lastUpdate: '09/09/2025', volume: '$10,000,000', price: '$135.00', valuation: 'Request', structure: 'Direct trade', shareClass: 'Common/Preferred'}
        ],
        sell: [
            {company: 'ByteDance', lastUpdate: '09/18/2025', volume: '$250M', price: '$199.15', valuation: '$335B', structure: 'Block Trade', shareClass: 'Preferred'},
            {company: 'Discord', lastUpdate: '09/17/2025', volume: '$10M', price: '$45.00', valuation: '$15B', structure: 'Secondary', shareClass: 'Common'},
            {company: 'Plaid', lastUpdate: '09/16/2025', volume: '$5M', price: '$13.50', valuation: '$13.5B', structure: 'Direct trade', shareClass: 'Series D'},
            {company: 'Revolut', lastUpdate: '09/12/2025', volume: 'Request', price: '$820.00', valuation: '$33B', structure: 'SPV', shareClass: 'Series A'}
        ]
    };
    
    // Initialize from URL params
    function loadStateFromURL() {
        const params = new URLSearchParams(window.location.search);
        
        if (params.get('tab')) {
            platformState.activeTab = params.get('tab');
        }
        
        if (params.get('company')) {
            platformState.selectedCompany = decodeURIComponent(params.get('company'));
        }
        
        if (params.get('complete') !== null) {
            platformState.showAllData = params.get('complete') === 'false';
        }
        
        if (params.get('structures')) {
            platformState.selectedStructures = decodeURIComponent(params.get('structures')).split(',');
        }
        
        if (params.get('shares')) {
            platformState.selectedShareClasses = decodeURIComponent(params.get('shares')).split(',');
        }
        
        if (params.get('sort')) {
            platformState.sortColumn = params.get('sort');
        }
        
        if (params.get('dir')) {
            platformState.sortDirection = params.get('dir');
        }
    }
    
    // Update URL with current state
    function updateURL() {
        const params = new URLSearchParams();
        
        params.set('tab', platformState.activeTab);
        
        if (platformState.selectedCompany) {
            params.set('company', platformState.selectedCompany);
        }
        
        params.set('complete', !platformState.showAllData);
        
        if (platformState.selectedStructures.length < 4) {
            params.set('structures', platformState.selectedStructures.join(','));
        }
        
        if (platformState.selectedShareClasses.length < 5) {
            params.set('shares', platformState.selectedShareClasses.join(','));
        }
        
        params.set('sort', platformState.sortColumn);
        params.set('dir', platformState.sortDirection);
        
        window.history.replaceState({}, '', `${window.location.pathname}?${params.toString()}`);
    }
    
    // Initialize
    async function init() {
        try {
            loadStateFromURL();
            await loadCompanyLogos();
            await loadData();
            setupEventListeners();
            updateUIFromState();
            applyFilters();
        } catch (error) {
            console.error('Initialization error:', error);
            platformState.buyData = fallbackData.buy;
            platformState.sellData = fallbackData.sell;
            platformState.currentData = platformState.sellData;
            applyFilters();
        }
    }
    
    // Update UI from state
    function updateUIFromState() {
        // Update tab buttons
        document.querySelectorAll('#institutional-overlay-platform .tab-btn').forEach(btn => {
            btn.classList.toggle('active', btn.dataset.tab === platformState.activeTab);
        });
        
        // Update company selector
        if (platformState.selectedCompany) {
            const button = document.querySelector('#platform-companySelector .selector-button');
            button.querySelector('span').textContent = platformState.selectedCompany;
            button.classList.add('has-filter');
        }
        
        // Update toggle
        const toggle = document.getElementById('platform-filterToggle');
        toggle.classList.toggle('active', platformState.showAllData);
        
        // Update sort headers
        document.querySelectorAll('#institutional-overlay-platform .header-cell.sortable').forEach(header => {
            if (header.dataset.sort === platformState.sortColumn) {
                header.classList.add(platformState.sortDirection === 'asc' ? 'sort-asc' : 'sort-desc');
            }
        });
    }
    
    // Load company logos
    async function loadCompanyLogos() {
        try {
            const response = await fetch(LOGOS_URL);
            if (!response.ok) throw new Error('Failed to fetch logos');
            
            const csv = await response.text();
            const lines = csv.split('\n');
            
            for (let i = 1; i < lines.length; i++) {
                const line = lines[i].trim();
                if (!line) continue;
                
                const urlMatch = line.match(/,(https?:\/\/[^,\s]+)$/);
                if (urlMatch) {
                    const url = urlMatch[1].trim();
                    const name = line.substring(0, urlMatch.index).trim().replace(/^["']|["']$/g, '');
                    platformState.companyLogos[name] = url;
                }
            }
        } catch (error) {
            console.error('Error loading logos:', error);
        }
    }
    
    // Load data from Google Sheets
    async function loadData() {
        try {
            const buyResponse = await fetch(
                `https://sheets.googleapis.com/v4/spreadsheets/${SHEET_ID}/values/BUY?key=${API_KEY}`
            );
            if (buyResponse.ok) {
                const buyJson = await buyResponse.json();
                platformState.buyData = parseSheetData(buyJson.values);
            }
            
            const sellResponse = await fetch(
                `https://sheets.googleapis.com/v4/spreadsheets/${SHEET_ID}/values/SELL?key=${API_KEY}`
            );
            if (sellResponse.ok) {
                const sellJson = await sellResponse.json();
                platformState.sellData = parseSheetData(sellJson.values);
            }
            
            if (platformState.buyData.length === 0) platformState.buyData = fallbackData.buy;
            if (platformState.sellData.length === 0) platformState.sellData = fallbackData.sell;
            
            platformState.currentData = platformState.activeTab === 'buy' ? platformState.buyData : platformState.sellData;
        } catch (error) {
            console.error('Error fetching data:', error);
            platformState.buyData = fallbackData.buy;
            platformState.sellData = fallbackData.sell;
            platformState.currentData = platformState.sellData;
        }
    }
    
    // Parse sheet data
    function parseSheetData(values) {
        if (!values || values.length < 2) return [];
        const rows = values.slice(1);
        return rows.map(row => ({
            company: row[0] || '',
            lastUpdate: row[1] || '',
            volume: row[2] || '',
            price: row[3] || '',
            valuation: row[4] || '',
            structure: row[5] || 'Unknown',
            shareClass: row[6] || 'Unknown'
        }));
    }
    
    // Find company logo
    function findCompanyLogo(companyName) {
        if (!companyName) return null;
        
        if (platformState.companyLogos[companyName]) {
            return platformState.companyLogos[companyName];
        }
        
        const normalizedInput = companyName.toLowerCase().trim();
        for (const [logoCompanyName, logoUrl] of Object.entries(platformState.companyLogos)) {
            const normalizedLogoName = logoCompanyName.toLowerCase().trim();
            if (normalizedLogoName.includes(normalizedInput) || normalizedInput.includes(normalizedLogoName)) {
                return logoUrl;
            }
        }
        
        return null;
    }
    
    // Apply filters and sort
    function applyFilters() {
        // Filter data
        platformState.filteredData = platformState.currentData.filter(row => {
            // Company filter
            if (platformState.selectedCompany && row.company !== platformState.selectedCompany) {
                return false;
            }
            
            // Structure filter
            if (platformState.selectedStructures.length > 0 && platformState.selectedStructures.length < 4) {
                const structureMatch = platformState.selectedStructures.some(s => {
                    const rowStructure = (row.structure || '').toLowerCase();
                    const filterStructure = s.toLowerCase();
                    return rowStructure === filterStructure || 
                           rowStructure.includes(filterStructure) ||
                           filterStructure.includes(rowStructure);
                });
                if (!structureMatch) {
                    return false;
                }
            }
            
            // Share Class filter
            if (platformState.selectedShareClasses.length > 0 && platformState.selectedShareClasses.length < 5) {
                const shareMatch = platformState.selectedShareClasses.some(sc => {
                    const rowShare = (row.shareClass || '').toLowerCase();
                    const filterShare = sc.toLowerCase();
                    
                    if (rowShare.includes('/')) {
                        return rowShare.split('/').some(part => 
                            platformState.selectedShareClasses.some(s => 
                                s.toLowerCase() === part.trim().toLowerCase()
                            )
                        );
                    }
                    
                    if (filterShare.includes('series') && rowShare.includes('series')) {
                        return true;
                    }
                    
                    return rowShare === filterShare || 
                           rowShare.includes(filterShare) ||
                           filterShare.includes(rowShare);
                });
                if (!shareMatch) {
                    return false;
                }
            }
            
            // Complete/All filter - Fixed to exclude "Request" values
            if (!platformState.showAllData) {
                // Check for missing required fields
                if (!row.company || !row.lastUpdate || !row.volume || !row.price || !row.valuation) {
                    return false;
                }
                // Check for "Request" in any field (case-insensitive)
                const fields = [row.volume, row.price, row.valuation];
                for (const field of fields) {
                    const fieldStr = (field || '').toLowerCase();
                    if (fieldStr.includes('request') || fieldStr.includes('offer') || fieldStr === 'n/a') {
                        return false;
                    }
                }
            }
            
            return true;
        });
        
        // Sort data
        sortData();
        
        // Update URL
        updateURL();
        
        // Render
        renderData();
    }
    
    // Sort data
    function sortData() {
        platformState.filteredData.sort((a, b) => {
            let aVal, bVal;
            
            if (platformState.sortColumn === 'company') {
                aVal = a.company.toLowerCase();
                bVal = b.company.toLowerCase();
            } else if (platformState.sortColumn === 'date') {
                aVal = parseDate(a.lastUpdate);
                bVal = parseDate(b.lastUpdate);
            } else if (platformState.sortColumn === 'volume') {
                aVal = parseValue(a.volume);
                bVal = parseValue(b.volume);
            } else if (platformState.sortColumn === 'price') {
                aVal = parseValue(a.price);
                bVal = parseValue(b.price);
            } else if (platformState.sortColumn === 'valuation') {
                aVal = parseValue(a.valuation);
                bVal = parseValue(b.valuation);
            } else {
                return 0;
            }
            
            if (platformState.sortDirection === 'asc') {
                return aVal > bVal ? 1 : aVal < bVal ? -1 : 0;
            } else {
                return bVal > aVal ? 1 : bVal < aVal ? -1 : 0;
            }
        });
    }
    
    // Parse date
    function parseDate(dateStr) {
        if (!dateStr) return new Date(0);
        const parts = dateStr.split('/');
        if (parts.length === 3) {
            return new Date(parts[2], parts[0] - 1, parts[1]);
        }
        return new Date(dateStr);
    }
    
    // Parse value
    function parseValue(str) {
        if (!str || str === 'N/A' || str.toLowerCase() === 'market' || str.toLowerCase().includes('request')) return 0;
        let cleaned = str.replace(/[$,]/g, '');
        if (cleaned.includes('M')) {
            cleaned = cleaned.replace('M', '');
            return parseFloat(cleaned) * 1000000;
        }
        if (cleaned.includes('B')) {
            cleaned = cleaned.replace('B', '');
            return parseFloat(cleaned) * 1000000000;
        }
        return parseFloat(cleaned) || 0;
    }
    
    // Render data
    function renderData() {
        const container = document.getElementById('platform-dataContent');
        
        if (platformState.filteredData.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <h3>No Deals Found</h3>
                    <p>Try adjusting your filters or add a new order</p>
                </div>
            `;
            return;
        }
        
        const dataRows = platformState.filteredData.map(row => {
            const logoUrl = findCompanyLogo(row.company);
            const logoHtml = logoUrl
                ? `<img src="${logoUrl}" alt="${row.company}">`
                : `<div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #f3f4f6; font-size: 9px; font-weight: 700;">${row.company.substring(0, 3).toUpperCase()}</div>`;
            
            const action = platformState.activeTab === 'buy' ? 'Purchase' : 'Sale';
            const subject = `RE: ${row.company} ${action} Order`;
            const body = `Dear Sir/Madam,\n\nWe wish to inquire about your ${action.toLowerCase()} order for ${row.company} securities.\n\nDetails:\n- Structure: ${row.structure}\n- Price: ${row.price}\n- Valuation: ${row.valuation}\n- Volume: ${row.volume}\n- Last Update: ${row.lastUpdate}\n\nPlease confirm availability.\n\nBest regards`;
            const mailtoLink = `mailto:deals@institutional-platform.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            
            return `
                <div class="data-row">
                    <div class="data-cell col-company">
                        <div class="company-info">
                            <div class="company-icon">${logoHtml}</div>
                            <span class="company-name">${row.company}</span>
                        </div>
                    </div>
                    <div class="data-cell col-date">
                        <span class="date-value">${row.lastUpdate}</span>
                    </div>
                    <div class="data-cell col-volume">
                        <span class="volume-value">${row.volume}</span>
                    </div>
                    <div class="data-cell col-price">
                        <span class="price-value">${row.price}</span>
                    </div>
                    <div class="data-cell col-valuation">
                        <span class="valuation-value">${row.valuation}</span>
                    </div>
                    <div class="data-cell col-structure">
                        <span class="structure-tag">${row.structure}</span>
                    </div>
                    <div class="data-cell col-share">
                        <span class="share-tag">${row.shareClass}</span>
                    </div>
                    <div class="data-cell col-action">
                        <a href="${mailtoLink}" class="btn-inquire">Inquire</a>
                    </div>
                </div>
            `;
        }).join('');
        
        container.innerHTML = `<div class="data-table">${dataRows}</div>`;
    }
    
    // Filter company list - Fixed to search by first letters
    function filterCompanyList(searchValue) {
        const items = document.querySelectorAll('#platform-companyList .dropdown-item');
        const search = searchValue.toLowerCase().trim();
        
        items.forEach(item => {
            const companySpan = item.querySelector('span');
            if (companySpan) {
                const text = companySpan.textContent.toLowerCase();
                // Filter by first letters only
                item.style.display = !search || text.startsWith(search) ? 'flex' : 'none';
            }
        });
    }
    
    // Filter modal company list - Fixed to search by first letters
    function filterModalCompanyList(searchValue) {
        const items = document.querySelectorAll('#platform-modalCompanyList .dropdown-item');
        const search = searchValue.toLowerCase().trim();
        
        items.forEach(item => {
            const companySpan = item.querySelector('span');
            if (companySpan) {
                const text = companySpan.textContent.toLowerCase();
                // Filter by first letters only
                item.style.display = !search || text.startsWith(search) ? 'flex' : 'none';
            }
        });
    }
    
    // Setup event listeners
    function setupEventListeners() {
        // Company selector
        const companySelector = document.getElementById('platform-companySelector');
        const companySelectorBtn = companySelector.querySelector('.selector-button');
        
        companySelectorBtn.addEventListener('click', (e) => {
            if (!e.target.classList.contains('clear-btn')) {
                companySelector.classList.toggle('open');
                if (companySelector.classList.contains('open')) {
                    renderCompanyDropdown();
                    document.getElementById('platform-companySearch').focus();
                }
            }
        });
        
        // Company search (fixed to filter by first letters)
        document.getElementById('platform-companySearch').addEventListener('input', (e) => {
            filterCompanyList(e.target.value);
        });
        
        // Tab buttons
        document.querySelectorAll('#institutional-overlay-platform .tab-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('#institutional-overlay-platform .tab-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                platformState.activeTab = btn.dataset.tab;
                platformState.currentData = platformState.activeTab === 'buy' ? platformState.buyData : platformState.sellData;
                applyFilters();
            });
        });
        
        // Filter toggle
        document.getElementById('platform-filterToggle').addEventListener('click', function() {
            this.classList.toggle('active');
            platformState.showAllData = this.classList.contains('active');
            applyFilters();
        });
        
        // Structure filter toggle
        const structureToggle = document.getElementById('platform-structureFilterToggle');
        const structureDropdown = document.getElementById('platform-structureFilterDropdown');
        
        structureToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            structureDropdown.classList.toggle('open');
            document.getElementById('platform-shareFilterDropdown').classList.remove('open');
        });
        
        // Share Class filter toggle
        const shareToggle = document.getElementById('platform-shareFilterToggle');
        const shareDropdown = document.getElementById('platform-shareFilterDropdown');
        
        shareToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            shareDropdown.classList.toggle('open');
            document.getElementById('platform-structureFilterDropdown').classList.remove('open');
        });
        
        // Prevent filter dropdowns from closing when clicking inside
        document.getElementById('platform-structureFilterDropdown').addEventListener('click', (e) => {
            e.stopPropagation();
        });
        
        document.getElementById('platform-shareFilterDropdown').addEventListener('click', (e) => {
            e.stopPropagation();
        });
        
        // Sort headers
        document.querySelectorAll('#institutional-overlay-platform .header-cell.sortable').forEach(header => {
            header.addEventListener('click', () => {
                const sortBy = header.dataset.sort;
                
                document.querySelectorAll('#institutional-overlay-platform .header-cell.sortable').forEach(h => {
                    h.classList.remove('sort-asc', 'sort-desc');
                });
                
                if (platformState.sortColumn === sortBy) {
                    platformState.sortDirection = platformState.sortDirection === 'asc' ? 'desc' : 'asc';
                } else {
                    platformState.sortColumn = sortBy;
                    platformState.sortDirection = 'desc';
                }
                
                header.classList.add(platformState.sortDirection === 'asc' ? 'sort-asc' : 'sort-desc');
                applyFilters();
            });
        });
        
        // Deal type options
        document.querySelectorAll('#institutional-overlay-platform .deal-type-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('#institutional-overlay-platform .deal-type-option').forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                const type = this.dataset.type;
                document.getElementById('platform-priceLabel').textContent = type === 'buy' ? 'Bid Price' : 'Offer Price';
            });
        });
        
        // Modal company selector
        const modalCompanySelector = document.getElementById('platform-modalCompanySelector');
        const modalCompanySelectorBtn = modalCompanySelector.querySelector('.selector-button');
        
        modalCompanySelectorBtn.addEventListener('click', () => {
            modalCompanySelector.classList.toggle('open');
            if (modalCompanySelector.classList.contains('open')) {
                renderModalCompanyDropdown();
                document.getElementById('platform-modalCompanySearch').focus();
            }
        });
        
        // Modal company search (fixed to filter by first letters)
        document.getElementById('platform-modalCompanySearch').addEventListener('input', (e) => {
            filterModalCompanyList(e.target.value);
        });
        
        // Close dropdowns on outside click
        document.addEventListener('click', (e) => {
            if (!companySelector.contains(e.target)) {
                companySelector.classList.remove('open');
            }
            
            if (modalCompanySelector && !modalCompanySelector.contains(e.target)) {
                modalCompanySelector.classList.remove('open');
            }
            
            if (!structureToggle.contains(e.target) && !structureDropdown.contains(e.target)) {
                structureDropdown.classList.remove('open');
            }
            if (!shareToggle.contains(e.target) && !shareDropdown.contains(e.target)) {
                shareDropdown.classList.remove('open');
            }
        });
    }
    
    // Render company dropdown
    function renderCompanyDropdown() {
        const list = document.getElementById('platform-companyList');
        const companies = [...new Set(platformState.currentData.map(row => row.company))].filter(Boolean);
        const allCompanies = [...new Set([...companies, ...Object.keys(platformState.companyLogos)])].sort();
        
        list.innerHTML = allCompanies.map(company => {
            const logoUrl = platformState.companyLogos[company];
            const logoHtml = logoUrl
                ? `<img src="${logoUrl}" alt="${company}">`
                : `<div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #f3f4f6; font-size: 9px; font-weight: 700;">${company.substring(0, 3).toUpperCase()}</div>`;
            
            return `
                <div class="dropdown-item ${platformState.selectedCompany === company ? 'selected' : ''}" onclick="platformSelectCompany('${company}')">
                    <div class="company-icon" style="width: 24px; height: 24px;">${logoHtml}</div>
                    <span style="font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; font-size: 11px;">${company}</span>
                </div>
            `;
        }).join('');
    }
    
    // Render modal company dropdown
    function renderModalCompanyDropdown() {
        const list = document.getElementById('platform-modalCompanyList');
        const allCompanies = Object.keys(platformState.companyLogos).sort();
        
        list.innerHTML = allCompanies.map(company => {
            const logoUrl = platformState.companyLogos[company];
            const logoHtml = logoUrl
                ? `<img src="${logoUrl}" alt="${company}">`
                : `<div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #f3f4f6; font-size: 9px; font-weight: 700;">${company.substring(0, 3).toUpperCase()}</div>`;
            
            return `
                <div class="dropdown-item ${platformState.modalSelectedCompany === company ? 'selected' : ''}" onclick="platformSelectModalCompany('${company}')">
                    <div class="company-icon" style="width: 24px; height: 24px;">${logoHtml}</div>
                    <span style="font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; font-size: 11px;">${company}</span>
                </div>
            `;
        }).join('');
    }
    
    // Global functions
    window.platformSelectCompany = function(company) {
        const selector = document.getElementById('platform-companySelector');
        const button = selector.querySelector('.selector-button span');
        
        if (platformState.selectedCompany === company) {
            platformState.selectedCompany = null;
            button.textContent = 'All Companies';
            selector.querySelector('.selector-button').classList.remove('has-filter');
        } else {
            platformState.selectedCompany = company;
            button.textContent = company;
            selector.querySelector('.selector-button').classList.add('has-filter');
        }
        
        selector.classList.remove('open');
        applyFilters();
    }
    
    window.platformSelectModalCompany = function(company) {
        const selector = document.getElementById('platform-modalCompanySelector');
        const button = selector.querySelector('.selector-button span');
        
        platformState.modalSelectedCompany = company;
        button.textContent = company;
        selector.classList.remove('open');
    }
    
    window.platformClearCompanyFilter = function(event) {
        event.stopPropagation();
        platformState.selectedCompany = null;
        const button = document.querySelector('#platform-companySelector .selector-button');
        button.querySelector('span').textContent = 'All Companies';
        button.classList.remove('has-filter');
        applyFilters();
    }
    
    // Reset All Filters - Fixed to set All as default
    window.platformResetAllFilters = function() {
        // Reset company
        platformState.selectedCompany = null;
        const companyButton = document.querySelector('#platform-companySelector .selector-button');
        companyButton.querySelector('span').textContent = 'All Companies';
        companyButton.classList.remove('has-filter');
        
        // Reset toggle to All
        platformState.showAllData = true;
        document.getElementById('platform-filterToggle').classList.add('active');
        
        // Reset structures
        platformState.selectedStructures = ['Direct trade', 'SPV', 'Forward'];
        document.querySelectorAll('#platform-structureFilterDropdown input[type="checkbox"]').forEach(checkbox => {
            checkbox.checked = true;
        });
        document.getElementById('platform-structureActiveIndicator').style.display = 'none';
        
        // Reset share classes
        platformState.selectedShareClasses = ['Common', 'Preferred'];
        document.querySelectorAll('#platform-shareFilterDropdown input[type="checkbox"]').forEach(checkbox => {
            checkbox.checked = true;
        });
        document.getElementById('platform-shareActiveIndicator').style.display = 'none';
        
        // Reset sort
        platformState.sortColumn = 'date';
        platformState.sortDirection = 'desc';
        document.querySelectorAll('#institutional-overlay-platform .header-cell.sortable').forEach(h => {
            h.classList.remove('sort-asc', 'sort-desc');
            if (h.dataset.sort === 'date') {
                h.classList.add('sort-desc');
            }
        });
        
        applyFilters();
    }
    
    window.platformOpenModal = function() {
        document.getElementById('platform-dealModal').classList.add('active');
        platformState.modalSelectedCompany = null;
        document.querySelector('#platform-modalCompanySelector .selector-button span').textContent = 'Select Company';
        document.getElementById('platform-dealPrice').value = '';
        document.getElementById('platform-dealVolume').value = '';
        document.getElementById('platform-dealValuation').value = '';
        document.getElementById('platform-dealStructure').value = '';
        document.getElementById('platform-dealShareClass').value = '';
    }
    
    window.platformCloseModal = function() {
        document.getElementById('platform-dealModal').classList.remove('active');
    }
    
    window.platformSubmitDeal = function() {
        const dealType = document.querySelector('input[name="platformDealType"]:checked').value;
        const newDeal = {
            company: platformState.modalSelectedCompany,
            lastUpdate: new Date().toLocaleDateString('en-US', {
                month: '2-digit',
                day: '2-digit',
                year: 'numeric'
            }),
            volume: document.getElementById('platform-dealVolume').value,
            price: document.getElementById('platform-dealPrice').value,
            valuation: document.getElementById('platform-dealValuation').value,
            structure: document.getElementById('platform-dealStructure').value,
            shareClass: document.getElementById('platform-dealShareClass').value
        };
        
        if (!newDeal.company || !newDeal.price || !newDeal.volume) {
            alert('Please fill in all required fields');
            return;
        }
        
        if (dealType === 'buy') {
            platformState.buyData.unshift(newDeal);
            if (platformState.activeTab === 'buy') {
                platformState.currentData = platformState.buyData;
            }
        } else {
            platformState.sellData.unshift(newDeal);
            if (platformState.activeTab === 'sell') {
                platformState.currentData = platformState.sellData;
            }
        }
        
        platformCloseModal();
        applyFilters();
    }
    
    // Structure filter functions
    window.platformApplyStructureFilter = function() {
        platformState.selectedStructures = [];
        document.querySelectorAll('#platform-structureFilterDropdown input[type="checkbox"]:checked').forEach(checkbox => {
            platformState.selectedStructures.push(checkbox.value);
        });
        
        const allChecked = document.querySelectorAll('#platform-structureFilterDropdown input[type="checkbox"]').length === 
                           platformState.selectedStructures.length;
        document.getElementById('platform-structureActiveIndicator').style.display = allChecked ? 'none' : 'inline-block';
        
        document.getElementById('platform-structureFilterDropdown').classList.remove('open');
        
        applyFilters();
    }
    
    window.platformResetStructureFilter = function() {
        document.querySelectorAll('#platform-structureFilterDropdown input[type="checkbox"]').forEach(checkbox => {
            checkbox.checked = true;
        });
        platformState.selectedStructures = ['Direct trade', 'SPV', 'Secondary', 'Block Trade'];
        document.getElementById('platform-structureActiveIndicator').style.display = 'none';
        
        document.getElementById('platform-structureFilterDropdown').classList.remove('open');
        
        applyFilters();
    }
    
    // Share Class filter functions
    window.platformApplyShareFilter = function() {
        platformState.selectedShareClasses = [];
        document.querySelectorAll('#platform-shareFilterDropdown input[type="checkbox"]:checked').forEach(checkbox => {
            platformState.selectedShareClasses.push(checkbox.value);
        });
        
        const allChecked = document.querySelectorAll('#platform-shareFilterDropdown input[type="checkbox"]').length === 
                           platformState.selectedShareClasses.length;
        document.getElementById('platform-shareActiveIndicator').style.display = allChecked ? 'none' : 'inline-block';
        
        document.getElementById('platform-shareFilterDropdown').classList.remove('open');
        
        applyFilters();
    }
    
    window.platformResetShareFilter = function() {
        document.querySelectorAll('#platform-shareFilterDropdown input[type="checkbox"]').forEach(checkbox => {
            checkbox.checked = true;
        });
        platformState.selectedShareClasses = ['Common', 'Preferred', 'Series A', 'Series B', 'Series C+'];
        document.getElementById('platform-shareActiveIndicator').style.display = 'none';
        
        document.getElementById('platform-shareFilterDropdown').classList.remove('open');
        
        applyFilters();
    }
    
    // Start the app
    init();
})();
</script>
</div>